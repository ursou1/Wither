@model IEnumerable<Wither.Models.Kboard>
@{
    ViewData["Title"] = "Товары";
}
<div class="p-4 p-md-5 mb-4 text-white bg-dark">
    <div class="col-md-6 px-0">
        <h1 class="display-4 font-italic ">Товары</h1>
        <p class="lead my-4 ">Товары</p>
    </div>
</div>
<h3>Клавиатуры</h3>
<table class="table">
    <tr>
        <td>Модель</td>
        <td>Производитель</td>
        <td>Цена</td>
        <td></td>
    </tr>
    @foreach (var kboard in Model)
    {
        <tr>
            <td>@kboard.Name</td>
            <td>@kboard.Description</td>
            <td>@kboard.Price</td>
            <td><a href="~/Home/Buy/@kboard.Id">Купить</a></td>
        </tr>
    }
</table>
